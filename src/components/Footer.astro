---
import { useTranslations, getLangFromUrl } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<div class="bg-black text-white min-h-screen flex flex-col justify-between px-6 md:px-12 py-12">
    <!-- Top Section: Newsletter & Contact -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Newsletter Section -->
      <div class="mt-4 md:mt-8">
        <p class="text-2xl md:text-3xl">{t('footer.subscribe-to-our-newsletter')}</p>
        <div class="border-b mt-4 pb-2 flex items-center">
          <input 
            type="email" 
            placeholder={t('footer.mailing-address')} 
            class="bg-black w-full text-white outline-none placeholder-gray-400 text-lg"
          />
          <a href="#" class="ml-4 text-lg md:text-xl">↗</a>
        </div>
      </div>
  
      <!-- Legal + Contact -->
      <div class="grid grid-cols-2 flex-flex-col-md:flex-row-justify-between mt-4 md:mt-8">
        <div class="text-sm md:text-base">
          <p class="">hello@otherdev.com</p>
          <p>+92 315 6893331</p>
          <p class="mt-2">78905 Karachi, Pakistan</p>
          <p>75011 Chicago, Illinois</p>
        </div>
        <div class="text-right mt-6 md:mt-0 text-sm md:text-base">
          <p>{t('footer.easter-egg')}</p>
          <p>©2025 The Other Dev</p>
        </div>
      </div>
    </div>
  
    <!-- Bottom Section: Huge Brand Name & Image -->
    <div class="flex flex-col md:flex-row items-center justify-between mt-12">
      <h1 class="text-[18vw] md:text-[12vw] font-serif tracking-tight leading-none text-neutral-200">
        {t('footer.bottom-big-text')}
      </h1>
      <div class="max-w-[40%] md:max-w-[20%] mt-6 md:mt-0">
        <img src="/shapes/Party.svg" class="w-full h-auto" />
      </div>
    </div>
  </div>
  