---
import { useTranslations, getLangFromUrl } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="px-4 bg-black w-full">
  <div class="bg-black text-white min-h-screen flex flex-col justify-between lg:container mx-auto py-12">
    <!-- Top Section: Newsletter & Contact -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Newsletter Section -->
      <div class="mt-4 lg:mt-8">
        <p class="text-2xl lg:text-3xl">{t("footer.subscribe-to-our-newsletter")}</p>
        <div class="border-b mt-4 pb-2 flex items-center">
          <input
            type="email"
            placeholder={t("footer.mailing-address")}
            class="bg-black w-full text-white outline-none placeholder-gray-400 text-lg"
          />
          <a href="#" class="ml-4 text-lg lg:text-xl">↗</a>
        </div>
      </div>

      <!-- Legal + Contact -->
      <div class="grid grid-cols-2 flex-flex-col-lg:flex-row-justify-between mt-4 lg:mt-8">
        <div class="text-sm lg:text-base">
          <p class="">hello@otherdev.com</p>
          <p>+92 315 6893331</p>
          <p class="mt-2">78905 Karachi, Pakistan</p>
          <p>75011 Chicago, Illinois</p>
        </div>
        <div class="text-right mt-6 lg:mt-0 text-sm lg:text-base">
          <p>{t("footer.easter-egg")}</p>
          <p>©2025 The Other Dev</p>
        </div>
      </div>
    </div>

    <!-- Bottom Section: Huge Brand Name & Image -->
    <div
      class="flex flex-col relative overflow-hidden lg:flex-row items-center justify-between gap-6 mt-12">
      <h1
        class="text-[25vw] queens-compressed lg:text-[15vw] font-serif tracking-tight leading-none text-left lg:text-left">
        {t("footer.bottom-big-text")}
      </h1>
      <div class="w-[20%] lg:w-[20%] hidden lg:block">
        <img src="/shapes/Party.svg" class="w-full h-auto object-contain" alt="Party Shape" />
      </div>
    </div>
  </div>
</div>
