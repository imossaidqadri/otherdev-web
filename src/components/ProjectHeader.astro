---
// components/OverlapHero.astro
interface Props {
  text: string;
  imageUrl: string;
}

const { text, imageUrl } = Astro.props;
---

<div class="overlap-hero">
  <div class="hero-text-container">
    <h1 class="hero-text">{text}</h1>
  </div>
  <div class="hero-image-wrapper">
    <img src={imageUrl} alt={text} class="hero-image">
  </div>
</div>

<style>
.overlap-hero {
  position: relative;
  width: 100%;
  /* Adjust height as needed to accommodate text and initial image visibility */
  min-height: 400px;
  overflow: hidden; /* Clip the image to the initial container */
}

.hero-text-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  background-color: black; /* Text background */
  color: white;
  padding: 80px 20px; /* Adjust padding */
  z-index: 2; /* Ensure text is above the image initially */
}

.hero-text {
  font-size: 4em; /* Adjust text size */
  font-weight: bold;
  margin: 0;
}

.hero-image-wrapper {
  position: absolute;
  top: 50%; /* Initial vertical position of the image */
  left: 0;
  width: 100%;
  transform: translateY(-20%); /* Adjust to control initial overlap */
  z-index: 1; /* Place image below text initially */
}

.hero-image {
  display: block;
  width: 100%;
  height: auto;
  object-fit: cover;
}

