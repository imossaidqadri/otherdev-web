---
import Layout from "@/layouts/Layout.astro";
import { getLangFromUrl } from "@/i18n/utils";
import { useTranslations } from "@/i18n/utils";
import Carousel from "@/components/Carousel.astro";
// import ShapesEmbeddable from "@/components/ShapesEmbeddable.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const importProjectsModule = import.meta.glob("@/data/*/services.json")[
  `/src/data/${lang}/services.json`
];
let Services = [];
if (importProjectsModule) Services = (await importProjectsModule()).default;
else
  console.warn(
    `Could not find projects module importer for key: ${`/src/data/${lang}/projects.json`}`
  );
---

<slot name="head">
  <title>Nos expertises – Studio de branding, stratégie et design | Blackpizza®</title>
  <meta
    name="dc.title"
    content="Nos expertises – Studio de branding, stratégie et design | Blackpizza®"
  />
  <meta
    name="dc.description"
    content="Explorez les expertises de Blackpizza®, studio de branding 360° à Paris. Stratégie, design graphique et digital pour les marques ambitieuses."
  />
  <meta name="dc.language" content="fr_FR" />
  <meta
    name="description"
    content="Explorez les expertises de Blackpizza®, studio de branding 360° à Paris. Stratégie, design graphique et digital pour les marques ambitieuses."
  />
  <meta
    name="robots"
    content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1"
  />
  <meta property="og:site_name" content="Blackpizza®" />
  <meta property="og:locale" content="fr_FR" />
  <meta property="og:type" content="article" />
  <meta
    property="og:title"
    content="Nos expertises – Studio de branding, stratégie et design | Blackpizza®"
  />
  <meta
    property="og:description"
    content="Explorez les expertises de Blackpizza®, studio de branding 360° à Paris. Stratégie, design graphique et digital pour les marques ambitieuses."
  />
  <meta
    property="og:image"
    content="https://blackpizza.com/wp-content/uploads/2025/01/Expertises-Image1-blackpizza-paris.jpg"
  />
  <meta
    property="og:image:secure_url"
    content="https://blackpizza.com/wp-content/uploads/2025/01/Expertises-Image1-blackpizza-paris.jpg"
  />
  <meta property="og:image:width" content="1440" />
  <meta property="og:image:height" content="900" />
  <meta
    property="og:image:alt"
    content="L'équipe Blackpizza devant le studio graphique rue des Trois Bornes."
  />
  <meta property="fb:app_id" content="mambolive" />
  <meta name="twitter:card" content="summary" />
  <meta
    name="twitter:title"
    content="Nos expertises – Studio de branding, stratégie et design | Blackpizza®"
  />
